<Window x:Class="KinectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" WindowState="Maximized"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Image x:Name="ColorImage"/>
        <Canvas x:Name="SkeletonCanvas" Background="Transparent"/>
        <Rectangle x:Name="Box" Width ="100" Height="100" Fill="#88000000" Visibility="Collapsed"
           MouseLeftButtonDown="Box_MouseLeftButtonDown"
           MouseMove="Box_MouseMove"
           MouseLeftButtonUp="Box_MouseLeftButtonUp"/>
    </Grid>
</Window>
